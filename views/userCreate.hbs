<!DOCTYPE html>
<html lang="en">
{{> header }}
<body class="d-flex flex-column min-vh-100">
    {{> navbar }}
    <div class="container my-3">
        <div class="row">
            <div class="col">
                <form class="text-center">
                    <label for="username" class="mt-5">Username</label>
                    <input type="text" id="username" class="form-control w-50 m-auto text-center mt-3" placeholder="Ingrese su username" required>
                    <label for="email" class="mt-5">Email</label>
                    <input type="email" id="email" class="form-control w-50 m-auto text-center mt-3" placeholder="Ingrese su email" required>
                    <label for="password" class="mt-5">Password</label>
                    <input type="password" id="password" class="form-control w-50 m-auto text-center mt-3" placeholder="Ingrese el password" required>
                    <div class="text-center">
                    <button class="btn btn-primary my-3">Agregar usuario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="./js/userCreate.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://momentjs.com/downloads/moment.js"></script>
</body>
</html>